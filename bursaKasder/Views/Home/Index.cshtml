@model bursaKasder.Models.EntityModels.IndexViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="zxx">
<head>
    <style>
        .event-slider .swiper-slide {
            display: flex;
            justify-content: center;
        }

        .service-box {
            width: 300px;
            text-align: center;
            background: #fff;
            padding: 15px;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .service-icon img {
            width: 150px;
            height: 150px;
            object-fit: cover;
            border-radius: 10px;
        }

        .service-title {
            font-size: 18px;
            font-weight: bold;
        }

        .service-text {
            font-size: 14px;
            color: #555;
        }

        /* HERO Bölümü */
        #page-hero, #news-section {
            position: relative;
            width: 100%;
            height: 100vh;
            overflow: hidden;
        }

        /* Arka Plan */
        .slider-bg, .news-bg {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            filter: brightness(0.6);
            z-index: -1;
        }

        /* Swiper Alanı */
        .swiper-container {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .swiper-slide {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 80px; /* Yukarıdan 50px kadar aşağıya kaydır */
        }

        /* Haber Kutusu */
        .news-box {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
            width: 80%;
            max-width: 850px;
            background: rgba(0, 0, 0, 0.8);
            color: white;
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0px 10px 25px rgba(0, 0, 0, 0.3);
        }

            .news-box:hover {
                transform: translateY(-5px);
            }

        /* Haber Görseli */
        .news-image {
            width: 100%;
            max-height: 400px;
            object-fit: cover;
            border-radius: 15px;
            margin-bottom: 20px;
            box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.2);
        }

        /* Haber Başlığı ve İçeriği */
        .slide-title {
            font-size: 28px;
            font-weight: bold;
            margin-bottom: 15px;
            letter-spacing: 1px;
            text-transform: uppercase;
        }

        .slide-subtitle {
            font-size: 18px;
            opacity: 0.85;
            line-height: 1.6;
        }

        /* Navigasyon Butonları */
        .swiper-button-prev, .swiper-button-next {
            width: 50px;
            height: 50px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: background 0.3s ease;
        }

            .swiper-button-prev:hover, .swiper-button-next:hover {
                background: rgba(255, 255, 255, 0.5);
            }

            .swiper-button-prev i, .swiper-button-next i {
                font-size: 24px;
                color: white;
            }

        /* Pagination (Slider Dotları) */
        .swiper-pagination-bullet {
            width: 12px;
            height: 12px;
            background: white;
            opacity: 0.6;
            transition: opacity 0.3s ease;
        }

        .swiper-pagination-bullet-active {
            opacity: 1;
            background: #ffcc00;
        }


    </style>
</head>
<body class=" overlay-is-linear-gradient ">

    <section id="news-section">
        <div class="news-bg" style="background-image: url('@Url.Content("~/UploadsOIPhoto/" + Model.DataOI.OI_StatuePhoto)');"></div>
        <div class="slider swiper-container">
            <div class="swiper-wrapper text-center">
                @foreach (var item in Model.ListNews)
                {
                    <div class="swiper-slide">
                        <div class="news-box">
                            <img class="news-image" src="~/UploadNewsUsPhoto/@item.newsU_Photo" alt="Haber Görseli">
                            <h1 class="slide-title">@item.newsU_Title</h1>
                            <p class="slide-subtitle">@item.newsU_Content</p>
                        </div>
                    </div>
                }
            </div>
            <div class="swiper-button-prev">
                <i class="fas fa-arrow-left"></i>
            </div>
            <div class="swiper-button-next">
                <i class="fas fa-arrow-right"></i>
            </div>
            <div class="swiper-pagination"></div>
        </div>
    </section>

    <!-- End  Page hero-->
    <!-- Start  services_img-icon_center-aligned-->
    <section class="portfolio portfolio-slider mega-section">
        <div class="container">
            <div class="section-heading center-heading">
                <h2 class="section-title wow" data-splitting="words">Etkinliklerimiz</h2>
                <p class="section-subtitle wow fadeInUp" data-wow-delay=".5s">Bursa Kastamonulular Dayanışma Derneği</p>
                <div class="line line-solid-main-color wow fadeIn" data-wow-delay="1s"></div>
            </div>
        </div>
        <div class="container-fluid p-0">
            <!-- Swiper -->
            <div class="swiper-container event-slider wow fadeInUp" data-wow-delay=".5s">
                <div class="swiper-wrapper">
                    @foreach (var item in Model.ListEvents)
                    {
                        <div class="swiper-slide">
                            <div class="box service-box">
                                <div class="service-icon">
                                    <img class="img-icon" src="~/UploadEventPhoto/@item.ev_MainPhoto" alt="service image" draggable="false" />
                                </div>
                                <div class="service-content">
                                    <h3 class="service-title">@item.ev_Title</h3>
                                    <p class="service-text">
                                        @item.ev_Content
                                    </p>
                                </div>
                                <a class="read-more" href="service-single.html">Devamını Oku<i class="fas fa-arrow-right icon"></i></a>
                            </div>
                        </div>
                    }
                </div>
                <div class="swiper-button-prev">
                    <div class="left-arrow">
                        <i class="fas fa-arrow-left icon"></i>
                    </div>
                </div>
                <div class="swiper-button-next">
                    <div class="right-arrow">
                        <i class="fas fa-arrow-right icon"></i>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- End  services_img-icon_center-aligned   -->
    <!-- Start  portfolio Section-->
    <section class="portfolio mega-section section-bg-shade" id="portfolio">
        <div class="container">
            <div class="section-heading center-heading text-center">
                <h2 class="section-title wow" data-splitting="words">Haberler - Duyurular</h2>
                <p class="section-subtitle wow fadeInUp" data-wow-delay=".5s">
                    Bursa Kastamonulular Dayanışma Derneği Son Dönem Haber ve Duyuruları.
                </p>
                <div class="line line-solid-main-color wow fadeIn" data-wow-delay="1s"></div>
            </div>

            <div class="row">
                <!-- Sol Taraf: Haberler / Duyurular -->
                <div class="col-lg-7">
                    <div class="swiper-container news-slider wow fadeInUp" data-wow-delay=".5s">
                        <div class="swiper-wrapper">
                            @foreach (var item in Model.ListNews)
                            {
                                <div class="swiper-slide">
                                    <div class="news-card shadow-sm p-2 rounded d-flex align-items-center">
                                        <div class="news-img me-3 flex-shrink-0">
                                            <img src="~/UploadNewsUsPhoto/@item.newsU_Photo" class="img-fluid rounded" width="80" height="80" alt="Haber Resmi">
                                        </div>
                                        <div class="news-content">
                                            <h6 class="news-title">@item.newsU_Title</h6>
                                            <p class="news-text small mb-1">@item.newsU_Content</p>
                                            <a class="read-more btn btn-primary btn-sm" href="service-single.html">
                                                Daha Fazla<i class="fas fa-arrow-right ms-2"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="swiper-button-prev">
                            <i class="fas fa-arrow-left"></i>
                        </div>
                        <div class="swiper-button-next">
                            <i class="fas fa-arrow-right"></i>
                        </div>
                    </div>
                </div>

                <!-- Sağ Taraf: Duyurular -->
                <div class="col-lg-5">
                    <div class="sidebar-box recent-posts">
                        <h6 class="sidebar-box-title">
                            <i class="fas fa-bullhorn me-2"></i>Duyurular
                        </h6>
                        <ul class="sidebar-list r-posts-list list-unstyled">
                            @foreach (var item in Model.ListAnnouncements)
                            {
                                <li class="r-post-item d-flex align-items-center mb-2">
                                    <div class="r-post-img-wrap me-2 flex-shrink-0">
                                        <img class="r-post-img rounded" src="~/UploadsAnnouncementsPhoto/@item.ann_Photo" width="60" height="60" alt="Duyuru Resmi">
                                    </div>
                                    <div class="content">
                                        <h6 class="r-post-title mb-1">@item.ann_Title</h6>
                                        <span class="r-post-date text-muted small">@item.ann_Content</span>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Start  our-clients Section-->
    <section class="our-clients   elf-section" id="our-clients">
        <div class="container">
            <div class="section-heading d-none ">
                <h4 class="section-title ">our great clients</h4>
                <p class="section-subtitle">Lorem ipsum dolor sit amet consectetur adipisicing elit. Sunt, architecto cupiditate odio rerum est</p>
                <div class="line-gradient-color">       </div>
            </div>
            <div class=" clients-logos d-flex align-items-center justify-content-around flex-wrap">
                <!--Swiper-->
                <div class="swiper-container">
                    <div class="swiper-wrapper clients-logo-wraper">
                        @foreach (var item in Model.ListNews) {
                            <div class="swiper-slide">
                                <div class="client-logo  wow fadeInUp" data-wow-delay=".2s"><a href="#0"><img class="img-fluid logo " src="~/UploadNewsUsPhoto/@item.newsU_Photo" alt=" "></a></div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="loading-screen" id="loading-screen">
        <div class="spinner">
            <div class="bounce1"></div>
            <div class="bounce2"></div>
            <div class="bounce3"></div>
        </div>
    </div>
        
    <div class="back-to-top" id="back-to-top"><i class="fas fa-arrow-up icon"></i></div>


    <script>
            document.addEventListener("DOMContentLoaded", function () {
            var swiper = new Swiper(".swiper-container", {
                loop: true, // Sonsuz döngü
                slidesPerView: 1, // Tek tek göster
                spaceBetween: 30,
                autoplay: {
                    delay: 3000, // 3 saniyede bir değişim
                    disableOnInteraction: false
                },
                navigation: {
                    nextEl: ".swiper-button-next",
                    prevEl: ".swiper-button-prev"
                },
                pagination: {
                    el: ".swiper-pagination",
                    clickable: true
                }
            });
        });
    </script>

</body>

</html>