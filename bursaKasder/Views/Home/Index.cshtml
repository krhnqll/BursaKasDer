@model bursaKasder.Models.EntityModels.IndexViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="zxx">
<head>
    <style>
        .event-slider .swiper-slide {
            display: flex;
            justify-content: center;
            align-items: stretch;
        }

        .service-box {
            width: 300px;
            text-align: center;
            background: #fff;
            padding: 15px;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .service-icon img {
            width: 150px;
            height: 150px;
            object-fit: cover;
            border-radius: 10px;
        }

        .service-title {
            font-size: 18px;
            font-weight: bold;
        }

        .service-text {
            font-size: 14px;
            color: #555;
        }

        /* HERO Bölümü */
        #page-hero, #news-section {
            position: relative;
            width: 100%;
            height: 100vh;
            overflow: hidden;
        }

        /* Arka Plan */
        .slider-bg, .news-bg {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            filter: brightness(0.6);
            z-index: -1;
        }

        /* Swiper Alanı */
        .swiper-container {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .swiper-slide {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 80px; /* Yukarıdan 50px kadar aşağıya kaydır */
        }

        /* Haber Kutusu */
        .news-box {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
            width: 80%;
            max-width: 850px;
            background: rgba(0, 0, 0, 0.8);
            color: white;
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0px 10px 25px rgba(0, 0, 0, 0.3);
        }

            .news-box:hover {
                transform: translateY(-5px);
            }

        /* Haber Görseli */
        .news-image {
            width: 100%;
            max-height: 400px;
            object-fit: cover;
            border-radius: 15px;
            margin-bottom: 20px;
            box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.2);
        }

        /* Haber Başlığı ve İçeriği */
        .slide-title {
            font-size: 28px;
            font-weight: bold;
            margin-bottom: 15px;
            letter-spacing: 1px;
            text-transform: uppercase;
        }

        .slide-subtitle {
            font-size: 18px;
            opacity: 0.85;
            line-height: 1.6;
        }

        /* Navigasyon Butonları */
        .swiper-button-prev, .swiper-button-next {
            width: 50px;
            height: 50px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: background 0.3s ease;
        }

            .swiper-button-prev:hover, .swiper-button-next:hover {
                background: rgba(255, 255, 255, 0.5);
            }

            .swiper-button-prev i, .swiper-button-next i {
                font-size: 24px;
                color: white;
            }

        /* Pagination (Slider Dotları) */
        .swiper-pagination-bullet {
            width: 12px;
            height: 12px;
            background: white;
            opacity: 0.6;
            transition: opacity 0.3s ease;
        }

        .swiper-pagination-bullet-active {
            opacity: 1;
            background: #ffcc00;
        }

        .portfolio-slider {
            padding: 50px 0;
        }

        .service-box {
            background: #fff;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
            padding: 20px;
            transition: all 0.3s ease-in-out;
        }

            .service-box:hover {
                transform: translateY(-5px);
                box-shadow: 0px 6px 15px rgba(0, 0, 0, 0.15);
            }

        .service-image img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 10px;
        }

        .service-title {
            font-size: 20px;
            font-weight: 600;
            margin-top: 15px;
        }

        .service-text {
            font-size: 14px;
            color: #666;
            margin-top: 10px;
        }

        .read-more {
            display: inline-flex;
            align-items: center;
            margin-top: 15px;
            font-size: 14px;
            color: #007bff;
            text-decoration: none;
            font-weight: 500;
        }

            .read-more i {
                margin-left: 5px;
            }

        .swiper-button-prev, .swiper-button-next {
            color: #007bff !important;
        }

        .swiper-pagination-bullet {
            background: #007bff !important;
        }

        .visitor-counter {
            position: absolute;
            top: -40px; /* Footer'dan biraz yukarı */
            right: 20px; /* Sağ kenara yasla */
            background: #fff;
            padding: 10px 15px;
            border-radius: 8px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            font-size: 14px;
            font-weight: bold;
            color: #333;
        }


    </style>
</head>
<body class=" overlay-is-linear-gradient ">

    <section id="news-section">
        <div class="news-bg" style="background-image: url('@Url.Content("~/UploadsOIPhoto/" + Model.DataOI.OI_StatuePhoto)');"></div>
        <div class="slider swiper-container">
            <div class="swiper-wrapper text-center">
                @foreach (var item in Model.ListNews)
                {
                    <div class="swiper-slide">
                        <div class="news-box">
                            <img class="news-image" src="~/UploadNewsUsPhoto/@item.newsU_Photo" alt="Haber Görseli">
                            <h1 class="slide-title">@item.newsU_Title</h1>
                            <p class="slide-subtitle">@item.newsU_Content</p>
                        </div>
                    </div>
                }
            </div>
            <div class="swiper-button-prev">
                <i class="fas fa-arrow-left"></i>
            </div>
            <div class="swiper-button-next">
                <i class="fas fa-arrow-right"></i>
            </div>
            <div class="swiper-pagination"></div>
        </div>
    </section>

    <!-- End  Page hero-->
    <!-- Start  services_img-icon_center-aligned-->
    <section class="portfolio portfolio-slider mega-section">
        <div class="container">
            <div class="section-heading center-heading">
                <h2 class="section-title wow" data-splitting="words">Etkinliklerimiz</h2>
                <p class="section-subtitle wow fadeInUp" data-wow-delay=".5s">Bursa Kastamonulular Dayanışma Derneği</p>
                <div class="line line-solid-main-color wow fadeIn" data-wow-delay="1s"></div>
            </div>
        </div>
        <div class="container-fluid p-0">
            <!-- Swiper -->
            <div class="swiper-container event-slider wow fadeInUp" data-wow-delay=".5s">
                <div class="swiper-wrapper">
                    @foreach (var item in Model.ListEvents)
                    {
                        <div class="swiper-slide">
                            <div class="box service-box">
                                <div class="service-image">
                                    <img src="~/UploadEventPhoto/@item.ev_MainPhoto" alt="@item.ev_Title" draggable="false" />
                                </div>
                                <div class="service-content">
                                    <h3 class="service-title">@item.ev_Title</h3>
                                    <p class="service-text">@item.ev_Content</p>
                                </div>
                                <a class="read-more" asp-action="events" asp-controller="Pages">Devamını Oku<i class="fas fa-arrow-right icon"></i></a>
                            </div>
                        </div>
                    }
                </div>
                <!-- Pagination ve Navigation -->
                <div class="swiper-pagination"></div>
                <div class="swiper-button-prev"></div>
                <div class="swiper-button-next"></div>
            </div>
        </div>
    </section>


    <!-- End  services_img-icon_center-aligned   -->
    <!-- Start  portfolio Section-->
    <section class="announcements-section mega-section section-bg-shade" id="announcements">
        <div class="container">
            <div class="section-heading center-heading text-center">
                <h2 class="section-title wow" data-splitting="words">Duyurular</h2>
                <p class="section-subtitle wow fadeInUp" data-wow-delay=".5s">
                    Bursa Kastamonulular Dayanışma Derneği Güncel Duyuruları
                </p>
                <div class="line line-solid-main-color wow fadeIn" data-wow-delay="1s"></div>
            </div>

            <div class="row">
                <!-- Sol Taraf: Fotoğraf -->
                <div class="col-lg-4 d-flex align-items-center justify-content-center">
                    <img src="~/UploadsOIPhoto/@Model.DataOI.OI_StatuePhoto" class="img-fluid rounded shadow-sm" alt="Duyurular Fotoğrafı" width="100%">
                </div>

                <!-- Sağ Taraf: Duyurular -->
                <div class="col-lg-8">
                    <div class="sidebar-box recent-posts">
                        <ul class="sidebar-list r-posts-list list-unstyled">
                            @foreach (var item in Model.ListAnnouncements)
                            {
                                <li class="r-post-item d-flex align-items-center mb-3 p-3 shadow-sm rounded bg-white">
                                    <div class="content">
                                        <h6 class="r-post-title mb-1 text-primary">@item.ann_Title</h6>
                                        <p class="r-post-date text-muted small mb-0">@item.ann_Content</p>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="container position-relative">
        <div class="visitor-counter">
            <i class="fas fa-eye"></i> Ziyaretçi Sayısı: <span>@Model.DataOI.Counter</span>
        </div>
    </div>

    <div class="loading-screen" id="loading-screen">
        <div class="spinner">
            <div class="bounce1"></div>
            <div class="bounce2"></div>
            <div class="bounce3"></div>
        </div>
    </div>

    <div class="back-to-top" id="back-to-top"><i class="fas fa-arrow-up icon"></i></div>


<script>
    document.addEventListener("DOMContentLoaded", function () {
        initNewsSwiper();
        initEventSwiper();
    });

    function initNewsSwiper() {
        new Swiper(".slider", {
            loop: true,
            slidesPerView: 1,
            spaceBetween: 30,
            autoplay: {
                delay: 3000,
                disableOnInteraction: false
            },
            navigation: {
                nextEl: ".swiper-button-next",
                prevEl: ".swiper-button-prev"
            },
            pagination: {
                el: ".swiper-pagination",
                clickable: true
            }
        });
    }

            function initEventSwiper() {
            new Swiper(".event-slider", {
                slidesPerView: 3,
                spaceBetween: 20,
                loop: true,
                loopedSlides: 5, // Döngü içinde kaç slaytın hatırlanacağını belirler
                loopAdditionalSlides: 5, // Ek slaytlar ekleyerek yumuşak bir geçiş sağlar
                centeredSlides: true, // Geçişlerin ortada daha düzgün görünmesini sağlar
                autoplay: {
                    delay: 3000,
                    disableOnInteraction: false
                },
                pagination: {
                    el: ".swiper-pagination",
                    clickable: true
                },
                navigation: {
                    nextEl: ".swiper-button-next",
                    prevEl: ".swiper-button-prev"
                },
                breakpoints: {
                    1024: { slidesPerView: 3 },
                    768: { slidesPerView: 2 },
                    480: { slidesPerView: 1 }
                }
            });
        }

</script>

</body>

</html>