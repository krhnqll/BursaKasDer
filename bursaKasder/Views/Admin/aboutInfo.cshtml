@model bursaKasder.Models.EntityModels.addAboutImage
@{
    ViewData["Title"] = "aboutInfo";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>aboutInfo</h1>

<div class="pc-container">
    <div class="pc-content">
        <div class="container mt-4">

            <!-- Düzenleme Butonu -->
            <div class="col-12 mb-3 ">
                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#editStudentModal">
                    <i class="bi bi-pencil-square"></i> Hakkında Düzenle
                </button>
            </div>

            <!-- Tarihçe Kartı -->
            <div class="card shadow-lg p-3 mb-4">
                <div class="row g-0">
                    <div class="col-md-4 text-center">
                        <img src="~/UploadsAboutPhoto/@Model.ab_HistoryPhotoPath" alt="Tarihçe Fotoğrafı"
                             class="img-fluid rounded" style="max-width: 100%; height: auto;">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><i class="bi bi-clock-history"></i> Tarihçe</h5>
                            <hr>
                            <p>@Model.ab_History</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Vizyon Kartı -->
            <div class="card shadow-lg p-3 mb-4">
                <div class="row g-0">
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><i class="bi bi-eye"></i> Vizyon</h5>
                            <hr>
                            <p>@Model.ab_Vision</p>
                        </div>
                    </div>
                    <div class="col-md-4 text-center">
                        <img src="~/UploadsAboutPhoto/@Model.ab_MisVisPhotoPath" alt="Vizyon Fotoğrafı"
                             class="img-fluid rounded" style="max-width: 100%; height: auto;">
                    </div>
                </div>
            </div>

            <!-- Misyon Kartı -->
            <div class="card shadow-lg p-3 mb-4">
                <div class="row g-0">
                    <div class="col-md-4 text-center">
                        <img src="~/UploadsAboutPhoto/@Model.ab_MisVisPhotoPath" alt="Misyon Fotoğrafı"
                             class="img-fluid rounded" style="max-width: 100%; height: auto;">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><i class="bi bi-flag"></i> Misyon</h5>
                            <hr>
                            <p>@Model.ab_Mission</p>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<div class="modal fade" id="editStudentModal" tabindex="-1" aria-labelledby="editStudentModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editStudentModalLabel">Dernek Bilgilerini Düzenle</h5>
            </div>
            <div class="modal-body">
                <div id="editStudentFormContainer"></div>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
<script>
          $(document).ready(function () {
        $('#editStudentModal').on('show.bs.modal', function () {
            $.get('@Url.Action("editAbout", "Admin")', function (data) {
                $('#editStudentFormContainer').html(data);
            });
        });
    });
</script>