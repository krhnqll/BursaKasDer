@model bursaKasder.Models.EntityModels.addAnnouncementsImage
@{
    ViewData["Title"] = "editAnnouncement";
    Layout = null;
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/inputmask/5.0.8/inputmask.min.js"></script>

<form method="post" enctype="multipart/form-data" asp-action="editAnnouncement" asp-asp-controller="Admin">
    <input type="hidden" asp-for="ann_ID" />

    <div class="form-group">
        <label for="ann_Title">Başlık</label>
        <input type="text" class="form-control" asp-for="ann_Title" required />
    </div>

    <div class="form-group">
        <label for="ann_Content">Açıklama</label>
        <textarea class="form-control" asp-for="ann_Content" rows="4" required></textarea>
    </div>

    <div class="form-group">
        <label for="ann_Date">Tarih</label>
        <input type="date" class="form-control" asp-for="ann_Date" required />
    </div>

    <div class="form-group">
        <label for="ann_Photo">Görsel</label>
        <input type="file" class="form-control-file" asp-for="ann_Photo" />

        @if (!string.IsNullOrEmpty(Model.ann_PhotoPath))
        {
            <img src="~/UploadsAnnouncementsPhoto/@Model.ann_PhotoPath" alt="Mevcut Fotoğraf" width="200" />
        }
    </div>


    <button type="submit" class="btn btn-primary">Güncelle</button>
    <a href="@Url.Action("AnnouncementsList")" class="btn btn-secondary">İptal</a>
</form>