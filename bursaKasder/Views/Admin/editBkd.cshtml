@model bursaKasder.Models.EntityModels.addOIimage
@{
    ViewData["Title"] = "editBkd";
    Layout = null;
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/inputmask/5.0.8/inputmask.min.js"></script>

<form method="post" enctype="multipart/form-data" asp-action="editBkd" asp-asp-controller="Admin">
    <input type="hidden" asp-for="OI_ID" />

    <div class="form-group">
        <label for="OI_Name">Dernek Adı</label>
        <input type="text" class="form-control" asp-for="OI_Name" required />
    </div>

    <div class="form-group">
        <label for="OI_Logo">Logo</label>
        <input type="file" class="form-control-file" asp-for="OI_Logo" />

        @if (!string.IsNullOrEmpty(Model.OI_LogoPath))
        {
            <img src="~/UploadsOIPhoto/@Model.OI_LogoPath" alt="Mevcut Fotoğraf" width="200" />
        }
    </div>
    <div class="form-group">
        <label for="OI_StatuePhoto">Statue Görsel</label>
        <input type="file" class="form-control-file" asp-for="OI_StatuePhoto" />

        @if (!string.IsNullOrEmpty(Model.OI_StatuePhotoPath))
        {
            <img src="~/UploadsOIPhoto/@Model.OI_StatuePhotoPath" alt="Mevcut Fotoğraf" width="200" />
        }
    </div>
    <div class="form-group">
        <label for="OI_Indexphoto">Giriş Görsel</label>
        <input type="file" class="form-control-file" asp-for="OI_Indexphoto" />

        @if (!string.IsNullOrEmpty(Model.OI_IndexphotoPath))
        {
            <img src="~/UploadsOIPhoto/@Model.OI_IndexphotoPath" alt="Mevcut Fotoğraf" width="200" />
        }
    </div>


    <button type="submit" class="btn btn-primary">Güncelle</button>
    <a href="@Url.Action("bkdInfo")" class="btn btn-secondary">İptal</a>
</form>
