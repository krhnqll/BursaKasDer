@model bursaKasder.Models.EntityModels.addOSImage
@{
    ViewData["Title"] = "editStructure";
    Layout = null;
}

<h1>editStructure</h1>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/inputmask/5.0.8/inputmask.min.js"></script>

<form method="post" enctype="multipart/form-data" asp-action="editStructure" asp-asp-controller="Admin">
    <input type="hidden" asp-for="OS_ID" />

    <div class="form-group">
        <label for="OS_Name">İsim</label>
        <input type="text" class="form-control" asp-for="OS_Name" required />
    </div>
    <div class="form-group">
        <label for="OS_Surname">Soyad</label>
        <input type="text" class="form-control" asp-for="OS_Surname" required />
    </div>
    <div class="form-group">
        <label for="OS_Degree">Ünvan</label>
        <input type="text" class="form-control" asp-for="OS_Degree" required />
    </div>

    <div class="form-group">
        <label for="OS_Comment">Kişi HK. Bilgi</label>
        <textarea class="form-control" asp-for="OS_Comment" rows="4" required></textarea>
    </div>

    <div class="form-group">
        <label for="OS_Photo">Kişi Fotoğraf</label>
        <input type="file" class="form-control-file" asp-for="OS_Photo" />

        @if (!string.IsNullOrEmpty(Model.OS_PhotoPath))
        {
            <img src="~/UploadOSPhoto/@Model.OS_PhotoPath" alt="Mevcut Fotoğraf" width="200" />
        }
    </div>


    <button type="submit" class="btn btn-primary">Güncelle</button>
    <a href="@Url.Action("OSStructureList")" class="btn btn-secondary">İptal</a>
</form>