@model bursaKasder.Models.EntityModels.addAboutImage
@{
    ViewData["Title"] = "editAbout";
}

<h1>editAbout</h1>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/inputmask/5.0.8/inputmask.min.js"></script>

<form method="post" enctype="multipart/form-data" asp-action="editAbout" asp-asp-controller="Admin">
    <input type="hidden" asp-for="ab_ID" />

    <div class="form-group">
        <label for="ab_History">Tarihçe</label>
        <textarea class="form-control" asp-for="ab_History" rows="4" required></textarea>
    </div>

    <div class="form-group">
        <label for="ab_HistoryPhoto">Tarihçe Görsel</label>
        <input type="file" class="form-control-file" asp-for="ab_HistoryPhoto" />

        @if (!string.IsNullOrEmpty(Model.ab_HistoryPhotoPath))
        {
            <img src="~/UploadsAboutPhoto/@Model.ab_HistoryPhotoPath" alt="Mevcut Fotoğraf" width="200" />
        }
    </div>
    <div class="form-group">
        <label for="ab_Vision">Vizyon</label>
        <textarea class="form-control" asp-for="ab_Vision" rows="4" required></textarea>
    </div>

    <div class="form-group">
        <label for="ab_Mission">Misyon</label>
        <textarea class="form-control" asp-for="ab_Mission" rows="4" required></textarea>
    </div>

    <div class="form-group">
        <label for="ab_MisVisPhoto">Misyon&Vizyon Görsel</label>
        <input type="file" class="form-control-file" asp-for="ab_MisVisPhoto" />

        @if (!string.IsNullOrEmpty(Model.ab_MisVisPhotoPath))
        {
            <img src="~/UploadsAboutPhoto/@Model.ab_MisVisPhotoPath" alt="Mevcut Fotoğraf" width="200" />
        }
    </div>


    <button type="submit" class="btn btn-primary">Güncelle</button>
    <a href="@Url.Action("NewsList")" class="btn btn-secondary">İptal</a>
</form>