@model bursaKasder.Models.EntityModels.addOIimage
@{
    ViewData["Title"] = "bkdInfo";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>bkdInfo</h1>
<div class="pc-container">
    <div class="pc-content">
        <div class="container mt-4">
            <h4 class="mb-3"><i class="bi bi-building"></i> Organizasyon Bilgileri</h4>

            <div class="col-12 mb-3 ">
                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#editStudentModal">
                    <i class="bi bi-pencil-square"></i> Bilgileri Düzenle
                </button>
            </div>

            <div class="card shadow-lg p-3">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-info-circle"></i> Genel Bilgiler</h5>
                    <hr>
                    <p><strong>İsim:</strong> @Model.OI_Name</p>
                </div>
            </div>

            <div class="card mt-3 shadow-lg p-3">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-image"></i> Görseller</h5>
                    <hr>
                    <div class="text-center">
                        <p><strong>Logo:</strong></p>
                        <img src="~/UploadsOIPhoto/@Model.OI_LogoPath" alt="Logo" class="img-fluid rounded mb-3" style="max-width: 200px;">

                        <p><strong>Heykel Fotoğrafı:</strong></p>
                        <img src="~/UploadsOIPhoto/@Model.OI_StatuePhotoPath" alt="Statue" class="img-fluid rounded mb-3" style="max-width: 200px;">

                        <p><strong>Ana Sayfa Fotoğrafı:</strong></p>
                        <img src="~/UploadsOIPhoto/@Model.OI_IndexphotoPath" alt="Index Photo" class="img-fluid rounded mb-3" style="max-width: 200px;">
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<div class="modal fade" id="editStudentModal" tabindex="-1" aria-labelledby="editStudentModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editStudentModalLabel">Dernek Bilgilerini Düzenle</h5>
            </div>
            <div class="modal-body">
                <div id="editStudentFormContainer"></div>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
<script>
          $(document).ready(function () {
        $('#editStudentModal').on('show.bs.modal', function () {
            $.get('@Url.Action("editBkd", "Admin")', function (data) {
                $('#editStudentFormContainer').html(data);
            });
        });
    });
</script>