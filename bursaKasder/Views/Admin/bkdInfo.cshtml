@model bursaKasder.Models.EntityModels.addOIimage
@{
    ViewData["Title"] = "bkdInfo";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>bkdInfo</h1>
<div class="pc-container">
    <div class="pc-content">
        <div class="container mt-4">
            <h4 class="mb-3"><i class="bi bi-building"></i> Organizasyon Bilgileri</h4>

            <div class="text-end mt-2 mb-3">
                <a href="/Admin/Edit/@Model.OI_ID" class="btn btn-warning"><i class="bi bi-pencil-square"></i> Düzenle</a>
            </div>
            <div class="card shadow-lg p-3">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-info-circle"></i> Genel Bilgiler</h5>
                    <hr>
                    <p><strong>İsim:</strong> @Model.OI_Name</p>
                </div>
            </div>

            <div class="card mt-3 shadow-lg p-3">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-image"></i> Görseller</h5>
                    <hr>
                    <div class="text-center">
                        <p><strong>Logo:</strong></p>
                        <img src="~/UploadsOIPhoto/@Model.OI_LogoPath" alt="Logo" class="img-fluid rounded mb-3" style="max-width: 200px;">

                        <p><strong>Heykel Fotoğrafı:</strong></p>
                        <img src="~/UploadsOIPhoto/@Model.OI_StatuePhotoPath" alt="Statue" class="img-fluid rounded mb-3" style="max-width: 200px;">

                        <p><strong>Ana Sayfa Fotoğrafı:</strong></p>
                        <img src="~/UploadsOIPhoto/@Model.OI_IndexphotoPath" alt="Index Photo" class="img-fluid rounded mb-3" style="max-width: 200px;">
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>