@model bursaKasder.Models.EntityModels.addNewsFromUs

@{
    ViewData["Title"] = "editNewsFromUs";
    Layout = null;
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/inputmask/5.0.8/inputmask.min.js"></script>

<form method="post" enctype="multipart/form-data" asp-action="editNewsFromUs" asp-asp-controller="Admin">
    <input type="hidden" asp-for="newsU_ID" />

    <div class="form-group">
        <label for="newsU_Title">Başlık</label>
        <input type="text" class="form-control" asp-for="newsU_Title" required />
    </div>

    <div class="form-group">
        <label for="newsU_Content">Açıklama</label>
        <textarea class="form-control" asp-for="newsU_Content" rows="4" required></textarea>
    </div>

    <div class="form-group">
        <label for="newsU_Date">Tarih</label>
        <input type="date" class="form-control" asp-for="newsU_Date" required />
    </div>

    <div class="form-group">
        <label for="newsU_Photo">Görsel</label>
        <input type="file" class="form-control-file" asp-for="newsU_Photo" />

        @if (!string.IsNullOrEmpty(Model.newsU_PhotoPath))
        {
            <img src="~/UploadNewsUsPhoto/@Model.newsU_PhotoPath" alt="Mevcut Fotoğraf" width="200" />
        }
    </div>


    <button type="submit" class="btn btn-primary">Güncelle</button>
    <a href="@Url.Action("NewsList")" class="btn btn-secondary">İptal</a>
</form>


