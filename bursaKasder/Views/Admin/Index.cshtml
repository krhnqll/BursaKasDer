@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="pc-container">
    <div class="pc-content">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <div class="card shadow-lg p-5 text-center" style="border-radius: 15px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">

                    <!-- Kullanıcı Bilgileri -->
                    <h1 class="fw-bold" style="font-size: 2.5rem;">Hoş Geldiniz, @ViewBag.Name @ViewBag.Surname! </h1>
                    <p class="lead" style="opacity: 0.9;">Bursa Kasder Yönetim Paneline Hoş Geldiniz. Buradan tüm yönetim işlemlerini gerçekleştirebilirsiniz.</p>

                    <!-- Bilgilendirme Kartları -->
                    <div class="row mt-4 d-flex justify-content-center">
                        <!-- Toplam Ziyaretçi Sayısı -->
                        <div class="col-md-6 ">
                            <div class="card shadow-sm p-4 text-center" style="border-radius: 15px; background: white; color: #333;">
                                
                                <h3 class="mt-3">Toplam Ziyaretçi</h3>
                                <h2 class="fw-bold">@ViewBag.Counter</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
