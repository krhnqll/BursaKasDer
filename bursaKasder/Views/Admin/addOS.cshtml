@model bursaKasder.Models.EntityModels.addOSImage
@{
    ViewData["Title"] = "addOS";
    Layout = null;
}

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>


<form class="form-group" method="post" enctype="multipart/form-data" asp-action="addOS" as-controller="Admin">
    <div class="pc-container">
        <div class="pc-content">
            <div class="col-12 grid-margin stretched-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Üye Ekle</h4>
                        <div class="forms-sample">
                            <div class="form-group">
                                <label for="OS_Name">İsim</label>
                                @Html.TextBoxFor(x => x.OS_Name, new { @class = "form-control", placeholder = "İsim Girin" })
                            </div>
                            <div class="form-group">
                                <label for="OS_Surname">Soyisim</label>
                                @Html.TextBoxFor(x => x.OS_Surname, new { @class = "form-control", placeholder = "Soyad giriniz" })
                            </div>
                            <div class="form-group">
                                <label for="OS_Degree">Ünvan</label>
                                @Html.TextBoxFor(x => x.OS_Degree, new { @class = "form-control", placeholder = "Ünvan giriniz" })
                            </div>
                            <div class="form-group">
                                <label for="OS_Comment">Ünvan</label>
                                @Html.TextAreaFor(x => x.OS_Comment, new { @class = "form-control", rows = "4", placeholder = "Kişi için yorum Girin" })
                            </div>
                            <div class="form-group">
                                <label for="OS_Photo">Görsel</label>
                                <input type="file" name="OS_Photo" class="form-control-file" />
                            </div>
                            <button type="submit" class="btn btn-gradient-primary mr-2">Ekle</button>
                            <a href="@Url.Action("OSStructureList", "Admin")" class="btn btn-light">İptal</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

