@model bursaKasder.Models.EntityModels.EventViewModel
@{
    ViewData["Title"] = "showEventDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .fixed-size {
        width: 300px; /* Sabit genişlik */
        height: 200px; /* Sabit yükseklik */
        object-fit: cover; /* Görüntüyü kırpıp alanı doldurur */
        border-radius: 8px; /* Kenarları yuvarlatma */
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1); /* Hafif gölge efekti */
    }

</style>
<section class="d-flex align-items-center page-hero inner-page-hero " id="page-hero">
    <div class="overlay-photo-image-bg "></div>
    <div class="overlay-color"></div>
    <div class="container">
        <div class="row">
            <div class="col-12 hero-text-area">
                <h1 class="hero-title" data-splitting>Etkinliğimiz</h1>
                <nav aria-label="breadcrumb ">
                    <ul class="breadcrumb wow fadeInUp" data-wow-delay="1s">
                        <li class="breadcrumb-item"><a class="breadcrumb-link" asp-action="Index" asp-controller="Home"><i class="fas fa-home icon "></i>Anasayfa</a></li>
                        <li class="breadcrumb-item active">@Model.ev_Title</li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</section>
<!-- End inner Page hero-->
<!-- Start inner Page hero-->
<div class="service-single ">
    <div class="container">
        <div class="row">
            <!-- Start service sidebar-->
            <div class="col-12 col-lg-4 order-1 order-lg-0">
                <div class="service-sidebar ">
                    <div class="sidebar-pane">
                        <ul class="list">
                            <li class="list-item active"><a asp-action="events" asp-controller="Pages"> @Model.ev_Title<i class="fas fa-arrow-right icon "></i></a></li>
                        </ul>
                    </div>                                 
                </div>
            </div>
            <!-- End service sidebar-->
            <!--Start service content-->
            <div class="col-12 col-lg-8 order-0 order-lg-1">
                <div class="service-content-area">
                    <div class="featured-img-area part">
                        <img class="feat-img img-fluid fixed-size" src="~/UploadEventPhoto/@Model.ev_MainPhoto" alt="featured image">
                    </div>
                    <div class="service-content">
                        <div class="part">
                            <h2 class="service-title">@Model.ev_Title</h2>
                            <p class="service-text">@Model.ev_Content</p>
                        </div>
                        <div class="part">
                            <div class="two-cols-img">
                                <div class="row">
                                    @foreach (var item in Model.EventPhotos)
                                    {
                                        <div class="col-12 col-md-4 mb-3">
                                            <!-- Daha iyi düzen için col-md-4 -->
                                            <div class="img-col">
                                                <img class="img-fluid fixed-size" src="~/UploadEventPhoto/@item" loading="lazy" alt="service single image"
                                                     data-bs-toggle="modal" data-bs-target="#imageModal" onclick="setModalImage(this)">
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!--Start service content-->
        </div>
    </div>
</div>
<div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body text-center">
                <img id="modalImg" class="img-fluid" src="" alt="Büyütülmüş Resim">
            </div>
        </div>
    </div>
</div>
<script>
        function setModalImage(element) {
        document.getElementById("modalImg").src = element.src;
    }
</script>                                              