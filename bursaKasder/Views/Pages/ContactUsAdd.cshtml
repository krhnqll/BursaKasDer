@model bursaKasder.Models.BKD_ContactUs
@{
    ViewData["Title"] = "ContactUsAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}


<section class="d-flex align-items-center page-hero inner-page-hero " id="page-hero">
    <div class="overlay-photo-image-bg "></div>
    <div class="overlay-color"></div>
    <div class="container">
        <div class="row">
            <div class="col-12 hero-text-area">
                <h1 class="hero-title" data-splitting>Bize Ulaşın</h1>
                <nav aria-label="breadcrumb ">
                    <ul class="breadcrumb wow fadeInUp" data-wow-delay="1s">
                        <li class="breadcrumb-item"><a class="breadcrumb-link" asp-action="Index" asp-controller="Home"><i class="fas fa-home icon "></i>Anasayfa</a></li>
                        <li class="breadcrumb-item active">Bize Ulaşın</li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</section>
<!-- End inner Page hero-->
<!-- Start inner Page hero-->
<div class="service-single ">
    <div class="container">
        <div class="row">
            <!-- Start service sidebar-->
            <div class="col-12 col-lg-4 order-1 order-lg-0">
                <div class="service-sidebar ">
                    <div class="sidebar-pane">
                        <ul class="list">
                            <li class="list-item active"><a asp-action="ContactUsAdd" asp-controller="Pages"> Bize Ulaşın<i class="fas fa-arrow-right icon "></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <!-- End service sidebar-->
            <!--Start service content-->
            <div class="col-12 col-lg-8 order-0 order-lg-1">
                <div class="contact-form-area">
                    <h2 class="form-title">Bizimle İletişime Geçin</h2>
                    <form asp-controller="Pages" asp-action="ContactUsAdd" method="POST">
                        <div class="mb-3">
                            <label for="conU_Name" class="form-label">Adınız</label>
                            <input type="text" class="form-control" id="conU_Name" name="conU_Name" required>
                        </div>
                        <div class="mb-3">
                            <label for="conU_Surname" class="form-label">Soyadınız</label>
                            <input type="text" class="form-control" id="conU_Surname" name="conU_Surname" required>
                        </div>
                        <div class="mb-3">
                            <label for="conU_Email" class="form-label">E-Posta</label>
                            <input type="email" class="form-control" id="conU_Email" name="conU_Email" required>
                        </div>
                        <div class="mb-3">
                            <label for="conU_Title" class="form-label">Konu Başlığı</label>
                            <input type="text" class="form-control" id="conU_Title" name="conU_Title" required>
                        </div>
                        <div class="mb-3">
                            <label for="conU_Message" class="form-label">Mesajınız</label>
                            <textarea class="form-control" id="conU_Message" name="conU_Message" rows="5" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Gönder</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



